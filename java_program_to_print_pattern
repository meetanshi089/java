// print the star pattern 
import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
	    //i for the row and j for the columns
	    // row denote the number of rows you want to print
	    int i, j, row=6;
	    for(i=0; i<row; i++)
	    {
	        for(j=0; j<=i; j++)
	        {
	            //print the star
	            System.out.print("*");
	        }
		System.out.println();
	    }
	}
}
